#include <bits/stdc++.h>
using namespace std;

int main()
{
    while (true)
    {
        int x, y;
        cin >> x >> y;
        vector <int> v1(x);
        vector <int> v2(y);
        int ans = 0;
        map <int, bool> m;

        if (x == 0 && y == 0)
        {
            break;
        }

        for (int i = 0; i < x; i++)
        {
            cin >> v1[i];
        }

        for (int i = 0; i < y; i++)
        {
            cin >> v2[i];
        }

        int i = 0, j = 0;

        while (i < x && j < y)
        {
            if (binary_search(v2.begin(), v2.end(), v1[i]) == false && binary_search(v1.begin(), v1.end(), v2[j]) == false)
            {
                v1.push_back(v2[j]);
                v2.push_back(v1[i]);
                j++;
                i++;
                ans++;
            }
            else if (binary_search(v2.begin(), v2.end(), v1[i]) == false && binary_search(v1.begin(), v1.end(), v2[j]) == true)
            {
                j++;
            }
            else if (binary_search(v2.begin(), v2.end(), v1[i]) == true && binary_search(v1.begin(), v1.end(), v2[j]) == false)
            {
                i++;
            } else {
                i++;
                j++;
            }
        }
        cout << ans << endl;
    }

    return 0;
}
